@page "{id}"
@using ContosoCrafts.WebSite.Pages.Shared
@using ContosoCrafts.WebSite.Services
@model ContosoCrafts.WebSite.Pages.ReadPage.ReadPageModel

@* @model ContosoCrafts.WebSite.Pages.Product.IndexModel *@
@inject JsonFileProductService ProductService;

@{
    ViewData["Title"] = "Movie Page";
}

<h1>@ViewData["Title"]</h1>

<p>At <b>Falcon Movies</b>, we present to you:</p>

<h2>@Model.Product.Title</h2>
<div>
    <img src="@Model.Product.Image" alt="@Model.Product.Title Poster" style="max-width: 300px;"/>
</div>
<br/>

<h3>Description</h3>
<p>@Model.Product.Description</p>

<h3>Case Details</h3>
@foreach (var product in Model.Product.Cast)
{
    <li>@product</li>
}
<br/>

<h4>Trailer</h4>
<iframe width="560" height="315" src="https://www.youtube.com/embed/@Model.Product.YouTubeID" frameborder="0" allowfullscreen></iframe>

@if (!string.IsNullOrEmpty(Model.Product.Genre))
{
    <h5>Genre:</h5>
    <p>@Model.Product.Genre</p>
}